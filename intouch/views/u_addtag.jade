extends layout

block content
  br
  .container
    .row
      .large-4.large-offset-4.columns
        h1.text-center.login-title Make-a-Tag Factory!
          .signup-wall
            form.form-signin(action='/u/addtag', method='POST')
              input.form-control(type='text', name='tagName', placeholder='Tag Name',required, autofocus)
              input.form-control(type='text', name='firstName', placeholder='First Name')
              input.form-control(type='text', name='lastName', placeholder='Last Name')
              input.form-control(type='email', name='email', placeholder='Email')
              input.form-control(type='text', name='phone', placeholder='Phone')
              input.form-control(type='text', name='address', placeholder='Address')

              button(class='button small', type='submit') Create Tag
              #message
              if message.length
                h4.text-center.error #{message}