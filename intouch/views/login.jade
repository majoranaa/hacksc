extends layout

block content
  br
  div.row
    div.large-4.large-offset-4.columns
      h1.text-center.login-title
        |Log into 
        b In Touch
        br
        br
        div.panel
          img.text-center.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
          form.form-signin(action='/login', method='POST')
            input.form-control(type='text', name='username', placeholder='Username',required)
            input.form-control(type='password', name='password', placeholder='Password', required)
            br
            button(class='button small', type='submit') Sign in
            span.clearfix
          a.text-center.new-account(href='/register') Create an account
          #message
          if message.length
            h4.text-center.error #{message}